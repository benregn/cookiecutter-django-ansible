{% raw %}
upstream app_server {
    server unix:///tmp/{{project_name}}.sock;
}

server {
    server_name www.{{fqdn}};
    return 301 $scheme://{{fqdn}}$request_uri;
}

server {
    listen                  80;
    listen                  [::]:80;
    server_name             {{fqdn}};
    charset                 utf-8;
    client_max_body_size    75M;
    root                    {{code_root_dir}};

    location / {
        try_files $uri @uwsgi;
    }

    location @uwsgi {
        include     uwsgi_params;
        uwsgi_pass  app_server;
    }
}
{% endraw %}
